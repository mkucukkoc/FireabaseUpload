<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    tools:context=".view.FotogtafPaylasma">

    <EditText
        android:id="@+id/tcText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="26dp"
        android:background="@color/cardview_light_background"
        android:ems="10"
        android:hint=" TC Giriniz"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/paylasButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogumText" />

    <EditText
        android:id="@+id/dogumText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="20dp"
        android:background="@color/cardview_light_background"
        android:ems="10"
        android:hint=" Dogum Tarihini Giriniz"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tcText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="40dp"

        android:onClick="gorselSec"
        android:src="@drawable/sa"
        app:layout_constraintBottom_toTopOf="@+id/nameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="14dp"
        android:background="@color/cardview_light_background"
        android:ems="10"
        android:hint=" Ismini Giriniz"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/dogumText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/paylasButton"
        android:layout_width="158dp"
        android:layout_height="52dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="51dp"
        android:background="@color/cardview_light_background"
        android:onClick="paylas"
        android:text="Kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tcText"
        app:layout_constraintTop_toBottomOf="@+id/tcText" />
</androidx.constraintlayout.widget.ConstraintLayout>